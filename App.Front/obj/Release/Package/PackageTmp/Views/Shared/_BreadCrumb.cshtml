@using App.Front.Models
@using App.Aplication
@{
    List<BreadCrumb> breadCrumbs = Model is List<BreadCrumb> ? Model : ViewBag.BreadCrumb as List<BreadCrumb>;

    <ol class="breadcrumb">
        <li>
            <a itemprop="url" href="@Url.Action("Index", "Home", new {area = ""})">
                <span itemprop="title">@T("TrangChu")</span>
            </a>
        </li>
        @if (breadCrumbs.IsAny())
        {
            foreach (var item in breadCrumbs)
            {
                if (!item.Current)
                {
                    <li>  <a href='@item.Url'>@item.Title</a></li>
                }
                else
                {
                    <li class="active"><a href='@item.Url'>@item.Title</a></li>
                }
            }
        }
    </ol>
}
<!---/_BreadCrumb--->