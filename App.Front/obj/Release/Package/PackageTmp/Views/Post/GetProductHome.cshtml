<!----GetProductHome-->

@using App.Aplication
@using App.Domain.Entities.Menu;
@model IEnumerable<App.Domain.Entities.Data.Post>

@if (Model.IsAny())
{
    foreach (App.Domain.Entities.Menu.MenuLink menuLink in (IEnumerable<MenuLink>)ViewBag.MenuLinkHome)
    {
        <div class="row row-fluid row-has-fill">
            <div class="col-sm-12">
                <div class="vc_column-inner ">
                    <div class="wpb_wrapper">
                        <div class="houzez-module module-title section-title-module text-center ">
                            <h2>
                                <a href='@Url.Action("GetContent", "Menu", new {menu = menuLink.SeoUrl, area = ""})'> @menuLink.MenuName</a>
                            </h2>

                            <h3 class="sub-heading"></h3>
                        </div>
                        <div id="properties_module_section" class="houzez-module property-item-module">
                            <div id="properties_module_container">
                                <div id="module_properties" class="property-listing grid-view grid-view-3-col">

                                    @foreach (var product in Model.Where(x => x.VirtualCategoryId.Contains(menuLink.CurrentVirtualId)))
                                    {
                                        <div id="ID-148" class="item-wrap infobox_trigger item-guaranteed-modern-home">
                                            <div class="property-item table-list">
                                                <div class="table-cell">
                                                    <div class="figure-block">
                                                        <figure class="item-thumb">
                                                            <a class="hover-effect" href="@Url.Action("PostDetail", "Post", new { seoUrl = product.SeoUrl, area = "" })" title="@product.Title">
                                                                <img width="385" height="258" src="@Url.Content("~/" + product.ImageMediumSize)" alt="@product.Title" title="@product.Title"
                                                                     class="attachment-houzez-property-thumb-image size-houzez-property-thumb-image wp-post-image"
                                                                     srcset="@Url.Content("~/" + product.ImageMediumSize) 385w
                                                                     , @Url.Content("~/" + product.ImageMediumSize) 300w
                                                                     , @Url.Content("~/" + product.ImageMediumSize) 768w
                                                                     , @Url.Content("~/" + product.ImageMediumSize) 1024w
                                                                     , @Url.Content("~/" + product.ImageMediumSize) 150w
                                                                     , @Url.Content("~/" + product.ImageMediumSize) 350w
                                                                     , @Url.Content("~/" + product.ImageMediumSize) 1170w" sizes="(max-width: 385px) 100vw, 385px" />
                                                            </a>
                                                        </figure>
                                                    </div>
                                                </div>
                                                <div class="item-body table-cell">
                                                    <div class="body-left table-cell">
                                                        <div class="info-row">
                                                            <h2 class="property-title">
                                                                <a href="@Url.Action("PostDetail", "Post", new { seoUrl = product.SeoUrl, area = "" })">
                                                                    @product.Title
                                                                </a>
                                                            </h2>
                                                          
                                                        </div>
                                                        <div class="info-row amenities hide-on-grid">
                                                           @Html.Raw(Utils.SplitWords(150, product.ShortDesc))                                                    
                                                        </div>
                                                    </div>
                                                   
                                                    <div class="table-list full-width hide-on-list">
                                                        <div class="cell">
                                                            <div class="info-row amenities">
                                                                @Html.Raw(Utils.SplitWords(150, product.ShortDesc))
                                                            </div>
                                                        </div>
                                                        <div class="cell">
                                                            <div class="phone">
                                                                <a href="@Url.Action("PostDetail","Post", new {seoUrl =product.SeoUrl,area=""})" class="btn btn-primary">
                                                                    @T("XemThem")
                                                                    <i class="fa fa-angle-right fa-right"></i>
                                                                </a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <p class="text-danger">
        Nội dung đang cập nhật
    </p>
}
<!----/GetProductHome-->
