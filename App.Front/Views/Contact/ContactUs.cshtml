<!----ContactUS--->
@using App.Domain.Entities.GlobalSetting
@model App.Domain.Entities.Menu.MenuLink

@{
    ContactInformation contactInformation = (ContactInformation)ViewBag.Contact;

    @Html.Action("BannerTop", "Banner", new { menuId = ViewBag.MenuId, title = ViewBag.Title })

    <div class="container">
        <div class="page-title breadcrumb-top">
            <div class="row">
                <div class="col-sm-12">
                    @{Html.RenderPartial("_BreadCrumb");}
                    <div class="page-title-left">
                        <h1 class="title-head">
                            @ViewBag.Title
                        </h1>
                    </div>
                </div>
            </div>
        </div>

        <section class="section-detail-content houzez-page-template">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="page-main">
                        <div class="white-block ">
                            <article id="post-1100" class="post-1100 page type-page status-publish hentry">
                                <div class="entry-content">
                                    <div class="row row-fluid">
                                        <div class="col-sm-9">
                                            <div class="vc_column-inner ">
                                                <div class="wpb_wrapper">
                                                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d489.8968014179958!2d106.64137241454132!3d10.797950316878014!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMTDCsDQ3JzUyLjYiTiAxMDbCsDM4JzI5LjkiRQ!5e0!3m2!1svi!2s!4v1503498144531" width="800" height="450" frameborder="0" style="border: 0" allowfullscreen></iframe>

                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-sm-3">
                                            <div class="vc_column-inner ">
                                                <div class="wpb_wrapper">
                                                    <div class="wpb_text_column wpb_content_element  vc_custom_1458842730143">
                                                        <div class="wpb_wrapper">
                                                            <p class="padding-top">
                                                                <strong>@T("NoiDungLienLac")</strong><br />                                                               
                                                            </p>
                                                            <p>
                                                                <strong>@contactInformation.Title</strong><br />                                                          
                                                            </p>
                                                            <p>
                                                                <i class="fa fa-location-arrow fa-fw"></i><strong>@T("DiaChi.Lable")</strong>:<br />
                                                                @contactInformation.Address   
                                                            </p>
                                                            <p>
                                                                <i class="fa fa-phone fa-fw"></i><strong>Hotline</strong>:
                                                                @contactInformation.Hotline   
                                                            </p>
                                                            <p>
                                                                <i class="fa fa-phone fa-fw"></i><strong>@T("DienThoai.Lable")</strong>:
                                                                @contactInformation.MobilePhone   
                                                            </p>
                                                            <p>
                                                                <i class="fa fa-envelope-o fa-fw"></i><strong>Email</strong>:
                                                                @contactInformation.Email   
                                                            </p>
                                                        </div>
                                                    </div>                                                    
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div><!-- .entry-content -->
                            </article><!-- #post-## -->
                        </div>
                    </div>
                </div>

            </div>
        </section>


    </div>

    <div id="content-wrapper" class="is-vc">
        <!-- post entry -->
        <article id="post-9" class="page-single post-9 page type-page status-publish hentry">
            <div class="post-content">
                <div class="vc_row wpb_row vc_row-fluid vc_custom_1444633257299 wpb_section">
                    <div class="container-full">
                        <div class="row">
                            <div class="wpb_column vc_column_container vc_col-sm-12">
                                <div class="vc_column-inner ">
                                    <div class="wpb_wrapper">
                                        <div class="wpb_gmaps_widget wpb_content_element vc_custom_1450145066092">
                                            <div class="wpb_wrapper">
                                                <div class="wpb_map_wraper">

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="vc_row wpb_row vc_row-fluid vc_custom_1451525930914 wpb_section wpb_padding">
                    <div class="container">
                        <div class="row">
                            <div class="st-heading style-1 text-left  vc_col-sm-12">
                                <h3 class="box-title">
                                    Gửi thông tin liên hệ
                                </h3>
                            </div>
                            <div class="wpb_column vc_column_container vc_col-sm-12">
                               <iframe src="https://docs.google.com/forms/d/e/1FAIpQLSeYN0fF4qQiNUnFx4YdeIKOOGsxiaecE89GDthSYOto51JwJQ/viewform?embedded=true" width="100%" height="900" frameborder="0" marginheight="0" marginwidth="0">Loading...</iframe>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>

        </article>
        <!-- end post entry -->

    </div>
}

